<% layout ("/layouts/boilerplate") -%>
<body>
    <div class="row">
        <div class="col-8 offset-3">
            <br>
    <h3>Listing Details : </h3><br>
    </div>
    <div class="card col-6 offset-3 show-card">
        <img src="<%= listing.image %>>" class="card-img-top show-img" alt="listing-image">
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br>
            <%= listing.description %><br>
            &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %><br>

            <%= listing.location %><br>
            <%= listing.country %>
        </p>
        </div>
    </div>
    <br>
    <div class="btns ">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 add-btn">Edit</a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
    </div>
</div>

